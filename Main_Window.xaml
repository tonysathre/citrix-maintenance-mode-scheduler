<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Name="Window_Main"
    ResizeMode="CanMinimize"
    SizeToContent="WidthAndHeight"
    >
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>
    <StackPanel Name="StackPanel_Main">
        <Menu IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Set Credentials" Name="MenuItem_SetCredentials" />
                <Separator />
                <MenuItem Header="Exit" Name="MenuItem_Exit" />
            </MenuItem>
        </Menu>
    <GroupBox Header="Citrix Maintenance Mode Scheduler" Padding="10">
        <Grid Name="Grid_Schedule">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <GroupBox Header="Delivery Controller">
                <TextBox Name="TextBox_DeliveryController" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" Width="256" />
            </GroupBox>

            <GroupBox Header="Object Type" Grid.Row="2" Grid.Column="1" Margin="5">
                <ComboBox Name="ComboBox_ObjectType" />
            </GroupBox>

            <GroupBox Header="Machines" Name="GroupBox_Machines" Grid.Row="3" Grid.Column="0" Margin="5">
                <ListBox Name="ComboBox_Machines" />
            </GroupBox>

            <GroupBox Header="Delivery Group" Name="GroupBox_DeliveryGroup" Grid.Row="3" Grid.Column="0" Margin="5" Visibility="Hidden">
                <ComboBox Name="ComboBox_DeliveryGroup" />
            </GroupBox>

            <GroupBox Header="Maintenance Mode Start" Name="GroupBox_MaintenanceModeStart" Grid.Row="4" Grid.Column="0" Margin="5">
            </GroupBox>

            <GroupBox Header="Maintenance Mode End" Name="GroupBox_MaintenanceModeEnd" Grid.Row="5" Grid.Column="0" Margin="5">
            </GroupBox>

            <GroupBox Header="Power Action" Name="GroupBox_PowerAction" Grid.Row="6" Grid.Column="0" Margin="5">
                <ComboBox Name="ComboBox_PowerAction" ItemsSource="{Binding}" />
            </GroupBox>
        </Grid>
    </GroupBox>
        <Button Name="Button_Schedule" Width="100" Margin="10">Schedule</Button>
    </StackPanel>
</Window>
